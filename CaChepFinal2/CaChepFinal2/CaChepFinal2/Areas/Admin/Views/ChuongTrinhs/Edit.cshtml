@model CaChepFinal2.Data.DataModel.ChuongTrinh

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Edit ChuongTrinh</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ChuongTrinhName" class="control-label"></label>
                <input asp-for="ChuongTrinhName" class="form-control" />
                <span asp-validation-for="ChuongTrinhName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiLeThayDoiGia" class="control-label"></label>
                <input asp-for="TiLeThayDoiGia" class="form-control" />
                <span asp-validation-for="TiLeThayDoiGia" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsTang" /> @Html.DisplayNameFor(model => model.IsTang)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>



