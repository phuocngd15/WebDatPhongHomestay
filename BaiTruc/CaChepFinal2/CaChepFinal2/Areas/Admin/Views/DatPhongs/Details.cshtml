@* Bang Phong *@
<h2>Danh sách Phòng</h2>
@*<p>
        <a asp-action="IndexPhong">Them Phong</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChiTietDatPhongs[0].Phong.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiTietDatPhongs[0].TrangThai.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiTietDatPhongs[0].ThoiGian)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*bị lỗi ở đây do đâu,  @foreach (var item in Model.ChiTietDatPhongs) *@
        @foreach (var item in Model.ChiTietDatPhongs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Phong.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGian)
                </td>
                <td>
                    @if (DateTime.Today.Date <= item.ThoiGian && DateTime.Today.Date >= Model.DatPhong.ThoiGianNhanPhongDuKien)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-area="Admin" asp-action="Details" asp-route-id="@item.PhongId"> 
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="DatPhong.Id" />
                                    <div class="form-group">
                                        @if (item.TrangThaiId == 1)
                                        {
                                            <input type="submit" value="Nhận Phòng" class="btn btn-outline-primary" />
                                        }

                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

